<!-- this class has no styling at the moment may want to maybe refactor later -->
<h2><a href="<%=user_url(@receiver)%>">
  <%= user_convert_nationality_to_img(@receiver.nationality) %>
  <%= " #{@receiver.name} " %>
  <%= image_tag('green-dot.png', class:'active', alt: 'Active') if @receiver.active %>
  </a>
  <%= " - #{@chat_room.title} Conversation"%>
</h2>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @messages %>
</div>

<br/><br/>
<!-- class and id are new_message -->
<div id="message-form">
  <%= form_for @message, url: '#' do |f| %>
  <%= f.text_area :body, id: 'message-body' %>
  <%= f.submit 'Send', class: 'btn btn-primary send-message' %>
  <% end %>
</div>

<%= render 'layouts/translate' %>
