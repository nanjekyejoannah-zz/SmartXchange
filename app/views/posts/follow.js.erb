$('#post-<%= @post.id %> .post-content time .post-follow').remove()
$('#post-<%= @post.id %> .post-content time .post-followers').remove()
if ($('#post-<%= @post.id %> .post-content time .post-list-followers').length) {
  $('#post-<%= @post.id %> .post-content time .post-list-followers').remove()
}
$('#post-<%= @post.id %> .post-content time').append(
  '<%= link_to "• Unfollow", unfollow_post_url(@post), remote: true, method: :post, class: "post-unfollow" %>'
  + '<%= link_to "• " + pluralize(@post.followers.count, "Follower"), followers_post_url(@post), remote: true, class: "post-followers"  %>'
)
