var prev_post = $('#post-<%= @post.id %>').prev();
$('#post-<%= @post.id %>').remove();
if (prev_post.length) {
  $("<%= j(render(:partial => 'post', :locals => {post: @post})) %>").insertAfter(prev_post);
} else {
  $('#posts ul').first().prepend($("<%= j(render(:partial => 'post', :locals => {post: @post})) %>"))
}
