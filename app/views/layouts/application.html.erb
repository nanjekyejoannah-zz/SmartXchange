<!DOCTYPE html>
<html>
<head>
  <!-- favicon code -->
    <%= favicon_link_tag 'favicon.ico' %>
  <!-- Custom Fonts -->
    <!-- <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"> -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!-- For google analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-80980803-1', 'auto');
    ga('send', 'pageview');
  </script>

  <meta content='<%= signed_in? ? current_user.id : "" %>' name='user-id'/>
  <%= csrf_meta_tags %>
  <!-- For google search console -->
  <meta name="google-site-verification" content="4JWatk4KhWB1Hk0g2IWSL3DErLnLsRU2wM7rio8FGRU" />
  <!-- old meta tag commented out, new one above is to verify for smartxchange gmail account creation -->
  <!-- <meta name="google-site-verification" content="NQxtKzoA5KKmVzYABRTFgfE901qd6F3z1F2-44DfQls" /> -->
</head>
<body>
    <% if signed_in? %>
      <!-- maybe refactor later  -->
      <% count = user_count_unread(current_user) %>
      <% title = count > 0 ? "(#{count}) smartXchange" : "smartXchange"   %>
      <title><%= title %></title>
      <%= render partial: '/layouts/header', :locals => { :count_unread => count }  %>
    <% else %>
      <%= render partial: '/layouts/header'  %>
    <% end %>

    <div class="container">
      <% if flash %>
        <%= flash_messages %>
      <% end %>
      <%= yield %>
      <%= render partial: '/layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <audio id="chatAudio"><source src="/sounds/decay.mp3" type="audio/mpeg"></audio>
</body>
</html>
