<% chat_mark_read(@chat, current_user) %>
<div class="chatboxhead">
  <div class="chatboxtitle">
    <!-- span hack job again, need to refactor -->
    <h1><a href="<%=user_url(@receiver)%>"><%= "#{@receiver.name}," %> <span style="font-weight:normal"> <%= "#{@receiver.language} #{user_convert_language_level(@receiver.language_level)}" %></span> </a></h1>
  </div>
  <div class="check"></div>
  <br clear="all"/>
</div>
<div class="chatboxcontent">
  <% if @messages.any? %>
      <%= render @messages %>
  <% end %>
</div>
<!-- will need to make this better eventually -->
<script type="text/javascript">
  var chatbox = $(".chatboxcontent")
  chatbox.scrollTop(chatbox[0].scrollHeight);
</script>

<div class="chatboxinput">
  <%= form_for([@chat, @message], :remote => true, :html => {id: "chat_form_#{@chat.id}"}) do |f| %>
      <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @chat.id %>
  <% end %>
</div>

<%= subscribe_to chat_path(@chat) %>
